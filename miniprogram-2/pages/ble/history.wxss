.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
  height: 100vh;
  background-color: #f8f8f8;
}

.history-list {
  width: 100%;
}

.no-devices {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #999;
  font-size: 28rpx;
}

.device-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.device-info {
  flex: 1;
}

.device-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.device-id {
  font-size: 24rpx;
  color: #999;
}

.connect-icon {
  font-size: 28rpx;
  color: #007AFF;
  padding: 10rpx 20rpx;
  border: 1px solid #007AFF;
  border-radius: 30rpx;
} 