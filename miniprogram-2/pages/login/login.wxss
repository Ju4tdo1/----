.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  box-sizing: border-box;
  height: 100vh;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  background-color: #007AFF;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.app-icon {
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.login-content {
  width: 100%;
  margin-top: 60rpx;
}

.login-form {
  width: 100%;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  width: 100%;
}

.form-label {
  width: 120rpx;
  font-size: 32rpx;
  color: #333;
}

.form-input {
  flex: 1;
  height: 80rpx;
  border: 1px solid #ddd;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  background-color: #f9f9f9;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  background-color: #007AFF;
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 60rpx;
}

.login-btn[disabled] {
  background-color: #cccccc;
  color: #ffffff;
}

.login-footer {
  margin-bottom: 40rpx;
}

.privacy-text {
  font-size: 24rpx;
  color: #999;
}
    